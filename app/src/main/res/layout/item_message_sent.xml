<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="sent"
            type="com.android.messaging.data.model.Message"
            />
        <variable
            name="listener"
            type="com.android.messaging.presentation.databinding.SingleLiveEvent"
            />
        <import type="android.view.View"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >

        <TextView
            android:text="@{sent.content}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_content"
            android:gravity="end"
            android:padding="8dp"
            android:maxWidth="250dp"
            android:background="@drawable/message_background_received"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            tools:text="16:45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_time_label"
            android:textSize="12sp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/message_content"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            tools:text="sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_status"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/message_time_label"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/message_content"
            />
</android.support.constraint.ConstraintLayout>
</layout>